#!/bin/bash
# -----------------------------------------------------------------------------
# Constants
# -----------------------------------------------------------------------------
ABSPATH=$(readlink -f $0)
ABSDIR=$(dirname $ABSPATH)
# -----------------------------------------------------------------------------
#
#
#
# -----------------------------------------------------------------------------
# Imports
# -----------------------------------------------------------------------------
source "$ABSDIR/../config.conf"
# -----------------------------------------------------------------------------
#
#
#
# -----------------------------------------------------------------------------
# Functions
# -----------------------------------------------------------------------------
function get_pit() {
    ps -fea | grep -v grep | grep $1 | grep -v grep | awk '{print $2}' | head -n 1
}
# -----------------------------------------------------------------------------
#
#
#
# -----------------------------------------------------------------------------
# Main
# -----------------------------------------------------------------------------
kill -9 $(get_pit $PROCESS_NAME)
# -----------------------------------------------------------------------------
